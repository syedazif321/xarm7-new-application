<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro" name="xarm7_linear_guide">
  <xacro:macro name="xarm7_with_linear_guide" params="prefix hw_ns limited velocity_control ros2_control_plugin add_gripper add_bio_gripper robot_ip report_type baud_checkset default_gripper_baud model_num inertial_params_filename kinematics_params_filename hard_interface">
    <!-- Vertical Fixed Column -->
    <link name="linear_slider">
      <visual>
        <origin xyz="0 0 0.25"/>
        <geometry><box size="0.1 0.1 0.5"/></geometry>
        <material name="blue"><color rgba="0.1 0.1 0.8 1"/></material>
      </visual>
      <collision>
        <origin xyz="0 0 0.25"/>
        <geometry><box size="0.1 0.1 0.5"/></geometry>
      </collision>
      <inertial>
        <origin xyz="0 0 0.25"/>
        <mass value="0.5"/>
        <inertia ixx="0.005" ixy="0" ixz="0" iyy="0.005" iyz="0" izz="0.005"/>
      </inertial>
    </link>

    <!-- Vertical Base Platform -->
    <link name="linear_base">
      <visual>
        <geometry><box size="0.3 0.3 0.05"/></geometry>
        <material name="gray"><color rgba="0.6 0.6 0.6 1"/></material>
      </visual>
      <collision>
        <geometry><box size="0.3 0.3 0.05"/></geometry>
      </collision>
      <inertial>
        <mass value="1.0"/>
        <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
      </inertial>
    </link>

    <!-- Vertical Joint -->
    <joint name="linear_slider_joint" type="prismatic">
      <parent link="linear_slider"/>
      <child link="linear_base"/>
      <origin xyz="0 0 0.5"/>
      <axis xyz="0 0 1"/>
      <limit lower="0.0" upper="0.4" effort="50" velocity="0.2"/>
      <dynamics damping="1.0" friction="0.2"/>
    </joint>

    <!-- Fix guide to world -->
    <joint name="world_to_linear_slider" type="fixed">
      <parent link="world"/>
      <child link="linear_slider"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </joint>
  </xacro:macro>
</robot>

